<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_marginStart="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_followers_count"
                android:layout_width="match_parent"
                android:drawableStart="@drawable/ic_follower_red_24dp"
                android:drawablePadding="4dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/tv_followings_count"
                android:layout_width="match_parent"
                android:drawableStart="@drawable/ic_following_red_24dp"
                android:drawablePadding="4dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/tv_favorite_count"
                android:layout_width="match_parent"
                android:drawableStart="@drawable/ic_favorite_red_24dp"
                android:drawablePadding="4dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/tv_buckets_count"
                android:layout_width="match_parent"
                android:drawableStart="@drawable/ic_bucket_red_24dp"
                android:drawablePadding="4dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_height="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_marginStart="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shots_count"
                android:layout_width="match_parent"
                android:drawableStart="@drawable/ic_shot_red_24dp"
                android:drawablePadding="4dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/tv_comments_count"
                android:layout_width="match_parent"
                android:drawableStart="@drawable/ic_comment_red_24dp"
                android:drawablePadding="4dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/tv_projects_count"
                android:layout_width="match_parent"
                android:drawableStart="@drawable/ic_project_red_24dp"
                android:drawablePadding="4dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_height="0dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_location_grey_24dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_browser_grey_24dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_twitter"
            android:layout_width="wrap_content"
            android:drawableStart="@drawable/ic_twitter_grey_24dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>